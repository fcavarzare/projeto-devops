name: Azure VM Free - Terraform + Docker + Ansible

on:
  push:
    branches:
      - main

jobs:
  terraform:
    name: Terraform - Create Azure Infra
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: 1.6.6

      - name: Azure Login
        uses: azure/login@v2
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Terraform Init
        run: terraform init

      - name: Terraform Plan
        run: terraform plan -out=tfplan
        env:
          TF_VAR_location: ${{ secrets.AZURE_LOCATION }}
          TF_VAR_resource_group: ${{ secrets.RESOURCE_GROUP }}
          TF_VAR_vm_name: ${{ secrets.VM_NAME }}
          TF_VAR_admin_username: ${{ secrets.ADMIN_USERNAME }}
          TF_VAR_ssh_public_key: ${{ secrets.SSH_PUBLIC_KEY }}

      - name: Terraform Apply (only if changes)
        run: |
          terraform show tfplan | grep "No changes." && echo "✅ Infra já está atualizada. Pulando apply." || terraform apply -auto-approve tfplan

      # Captura o IP público da VM e salva como variável global
      - name: Get public IP from Terraform output
        id: tf_output
        run: |
          echo "PUBLIC_IP=$(terraform output -raw public_ip)" >> $GITHUB_ENV

  docker_build_push:
    name: Docker Build & Push
    runs-on: ubuntu-latest
    needs: terraform

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Docker Login
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKERHUB_USERNAME }}
          password: ${{ secrets.DOCKERHUB_TOKEN }}

      - name: Build Docker image
        run: docker build -t ${{ secrets.DOCKER_IMAGE }} .

      - name: Push Docker image
        run: docker push ${{ secrets.DOCKER_IMAGE }}

  ansible_deploy:
    name: Ansible Deploy (NGINX container)
    runs-on: ubuntu-latest
    needs: docker_build_push

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install Ansible
        run: |
          sudo apt update -y
          sudo apt install -y ansible

      # Cria inventário dinâmico com o IP capturado
      - name: Create Ansible inventory
        run: |
          echo "${{ env.PUBLIC_IP }}" > inventory.ini
          echo "Inventory gerado com IP:"
          cat inventory.ini

      # Adiciona chave privada para autenticação SSH
      - name: Add SSH key
        run: |
          echo "${{ secrets.VM_SSH_PRIVATE_KEY }}" > private_key.pem
          chmod 600 private_key.pem

- name: Run Ansible Playbook (com sudo)
  env:
    ANSIBLE_HOST_KEY_CHECKING: "False"
  run: |
    ansible-playbook -i inventory.ini ansible/playbook.yml \
      --private-key private_key.pem \
      -u ${{ secrets.ADMIN_USERNAME }} \
      --become \
      --become-method=sudo

      # Exibe o IP público no final
      - name: Show public IP
        run: |
          echo "Aplicação disponível em: http://${{ env.PUBLIC_IP }}"

